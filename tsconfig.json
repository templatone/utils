{
  "compilerOptions": {
    "isolatedModules": true,
    "declarationDir": "./lib",
    "strict": true,
    "target": "esNext",
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}